{
  "name": "NPMboilerplate",
  "version": "0.0.1",
  "description": "A build tool for front-end workers",
  "author": "Hash&Salt",
  "license": "MIT",
  "config": {
    "sasssrc": "src/sass/",
    "sassdest": "src/css/",
    "cssdest": "public/assets/css",
    "postcsssrc": "src/css/**/*.css",
    "frameworkpath": "node_modules/path/to/framework",
    "jsout": "public/assets/js",
    "jssrc": "src/js/site.js",
    "jsdest": "public/assets/js/site.js",
    "jsmindest": "public/assets/js/site.min.js",
    "fontsrc": "src/fonts/",
    "fontdest": "public/assets/fonts",
    "imgsrc": "src/images/raster/",
    "imgdest": "public/assets/images"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "yarn clean:assets && yarn build",
    "build": "yarn sass:dev && yarn js:dev && yarn images && yarn fonts && yarn watch:all",
    "sass:dev": "node-sass --include-path $npm_package_config_frameworkpath --precision 10 --source-map-embed $npm_package_config_sasssrc -o $npm_package_config_sassdest && postcss $npm_package_config_postcsssrc -m -e development -c postcss.config.js -d $npm_package_config_cssdest",
    "sass": "node-sass --include-path $npm_package_config_frameworkpath --precision 10 --source-map-embed $npm_package_config_sasssrc -o $npm_package_config_sassdest && postcss $npm_package_config_postcsssrc --no-map -e production -x min.css -c postcss.config.js -d $npm_package_config_cssdest",
    "js:dev": "mkdir -p $npm_package_config_jsout && browserify $npm_package_config_jssrc > $npm_package_config_jsdest",
    "js": "mkdir -p $npm_package_config_jsout && browserify $npm_package_config_jssrc -t uglifyify | uglifyjs -cm > $npm_package_config_jsmindest",
    "fonts": "rsync -azr --force --delete --progress --exclude-from=rsync_exclude.txt $npm_package_config_fontsrc $npm_package_config_fontdest",
    "images": "rsync -azr --force --delete --progress --exclude-from=rsync_exclude.txt $npm_package_config_imgsrc $npm_package_config_imgdest",
    "images:min": "imageoptim -d $npm_package_config_imgdest",
    "watch:images": "chokidar $npm_package_config_imgsrc -c 'yarn images'",
    "watch:js": "chokidar $npm_package_config_jssrc -c 'yarn js:dev'",
    "watch:fonts": "chokidar $npm_package_config_fontsrc -c 'yarn fonts'",
    "watch:sass": "chokidar $npm_package_config_sasssrc -c 'yarn sass:dev'",
    "watch:all": "parallelshell 'yarn watch:sass' 'yarn watch:fonts' 'yarn watch:images' 'yarn watch:js' 'yarn serve'",
    "serve": "browser-sync start -c 'bs-config.js'",
    "clean:assets": "rm -rf $npm_package_config_cssdest && rm -rf $npm_package_config_jsout && rm -rf $npm_package_config_imgdest && rm -rf $npm_package_config_fontdest",
    "release:staging": "yarn clean:assets && yarn sass:dev && yarn js:dev && yarn images && yarn fonts",
    "release:live": "yarn clean:assets && yarn sass && yarn js && yarn images && yarn images:min && yarn fonts"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.0",
    "browser-sync": "^2.18.8",
    "browserify": "^14.3.0",
    "chokidar-cli": "^1.2.0",
    "css-mqpacker": "^6.0.0",
    "cssnano": "^3.10.0",
    "imageoptim-cli": "^1.14.9",
    "jquery": "^3.2.1",
    "node-sass": "^4.5.2",
    "normalize.css": "^7.0.0",
    "parallelshell": "^2.0.0",
    "path": "^0.12.7",
    "postcss-cli": "^4.0.0",
    "postcss-import": "^10.0.0",
    "postcss-unprefix": "^2.1.1",
    "uglifyify": "^3.0.4",
    "uglify-js": "^3.0.10"
  },
  "dependencies": {}
}
